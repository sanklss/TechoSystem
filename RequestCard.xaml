<UserControl x:Class="TechnoSystem.RequestCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TechnoSystem"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="600">

    <Border BorderBrush="#E0E0E0" 
            BorderThickness="1" 
            CornerRadius="8" 
            Background="White" 
            Margin="10,5" 
            Padding="15">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Колонка 1: Номер заявки -->
            <StackPanel Grid.Column="0" Width="100">
                <TextBlock Text="№ заявки:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Id}" FontSize="16" Foreground="DarkBlue"/>

                <TextBlock Text="Клиент:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding User.Login}" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Колонка 2: Тариф -->
            <StackPanel Grid.Column="1" Margin="20,0">
                <TextBlock Text="Тариф:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Tarif.Name}" FontSize="14"/>

                <TextBlock Text="Услуга:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding Tarif.Service.Name}"/>
            </StackPanel>

            <!-- Колонка 3: Дата и статус -->
            <StackPanel Grid.Column="2" Margin="20,0">
                <TextBlock Text="Дата:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Date, StringFormat='{}{0:dd.MM.yyyy}'}"/>

                <TextBlock Text="Статус:" FontWeight="Bold" Margin="0,10,0,0"/>
                <Border Background="{Binding RequestStatus.Color}" 
                        CornerRadius="3" 
                        Padding="5,2" 
                        HorizontalAlignment="Left">
                    <TextBlock Text="{Binding RequestStatus.Name}" 
                               Foreground="White"
                               FontWeight="SemiBold"/>
                </Border>
            </StackPanel>

            <!-- Колонка 4: Кнопка редактирования -->
            <Button Grid.Column="3" 
                    Content="✎" 
                    FontSize="16"
                    Width="40" 
                    Height="40"
                    Click="EditButton_Click"
                    ToolTip="Редактировать заявку"
                    Background="Transparent"
                    BorderThickness="0"/>
        </Grid>
    </Border>
</UserControl>