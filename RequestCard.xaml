<UserControl x:Class="TechnoSystem.RequestCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TechnoSystem"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="600">

    <Border BorderBrush="#E0E0E0" Background="White" >

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Width="100">
                <TextBlock Text="№ заявки:" />
                <TextBlock Text="{Binding Id}" />

                <TextBlock Text="Клиент:" />
                <TextBlock Text="{Binding User.Login}" />
            </StackPanel>

            <StackPanel Grid.Column="1" >
                <TextBlock Text="Тариф:" />
                <TextBlock Text="{Binding Tarif.Name}" />

                <TextBlock Text="Услуга:"/>
                <TextBlock Text="{Binding Tarif.Service.Name}"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Дата:"/>
                <TextBlock Text="{Binding Date, StringFormat='{}{0:dd.MM.yyyy}'}"/>

                <TextBlock Text="Статус:" />
                <Border Background="{Binding RequestStatus.Color}" >
                    <TextBlock Text="{Binding RequestStatus.Name}" />
                </Border>
            </StackPanel>

            <Button Grid.Column="2" Margin="215,0,-11,0" Grid.ColumnSpan="2"/>
        </Grid>
    </Border>
</UserControl>