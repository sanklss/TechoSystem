<Window x:Class="TechnoSystem.RequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechnoSystem"
        mc:Ignorable="d"
        Title="Заявка" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="№ заявки:" Width="120" VerticalAlignment="Center"/>
            <TextBlock x:Name="RequestIdText" Text="" FontWeight="Bold" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Тариф:*" Width="120" VerticalAlignment="Center"/>
            <ComboBox x:Name="TarifComboBox" Width="300" DisplayMemberPath="Name" 
                      SelectionChanged="TarifComboBox_SelectionChanged" FontSize="14"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Клиент:*" Width="120" VerticalAlignment="Center"/>
            <ComboBox x:Name="UserComboBox" Width="300" DisplayMemberPath="Login" FontSize="14"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Дата:*" Width="120" VerticalAlignment="Center"/>
            <DatePicker x:Name="DatePicker" Width="300" FontSize="14"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Кол-во лицензий:*" Width="120" VerticalAlignment="Center"/>
            <TextBox x:Name="LicenseQuantityTextBox" Width="300" FontSize="14"
                     TextChanged="LicenseQuantityTextBox_TextChanged"/>
            <TextBlock x:Name="AvailableLicensesText" Margin="10,0,0,0" 
                       Foreground="Gray" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Статус:*" Width="120" VerticalAlignment="Center"/>
            <ComboBox x:Name="StatusComboBox" Width="300" DisplayMemberPath="Name" FontSize="14"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Vertical" Margin="0,0,0,15">
            <TextBlock Text="Комментарий:" Width="120" VerticalAlignment="Top"/>
            <TextBox x:Name="CommentTextBox" Width="400" Height="80" 
                     TextWrapping="Wrap" AcceptsReturn="True" 
                     FontSize="14" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="DeleteButton" 
                    Content="Удалить" 
                    Click="DeleteButton_Click" 
                    Width="100" Height="35"
                    Margin="0,0,10,0" FontSize="14"
                    Background="Red" Foreground="White"
                    Visibility="Collapsed"/>

            <Button x:Name="SaveButton" 
                    Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Width="100" Height="35"
                    Margin="0,0,10,0" FontSize="14"
                    Background="#4CAF50" Foreground="White"/>

            <Button x:Name="CancelButton" 
                    Content="Отмена" 
                    Click="CancelButton_Click" 
                    Width="100" Height="35" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>